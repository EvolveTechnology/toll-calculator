@model TollFeeCalculator.Models.ViewModels.TollFeeViewModel

@{
    ViewData["Title"] = "Toll Fee Calculator";
}
<h1 class="display-4">Toll Fee Calculator!</h1>

@using (Html.BeginForm("CalculateFee", "Calculator", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Calculate the Toll Fee by entering the vehicle id, type and datetime.</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(x => Model.VehicleId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.VehicleId, new { htmlAttributes = new { @class = "form-control", @autofocus = "autofocus" } })
            @Html.ValidationMessageFor(x => x.VehicleId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => Model.VehicleType, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.VehicleType, new { htmlAttributes = new { @class = "form-control", @autofocus = "autofocus" } })
            @Html.ValidationMessageFor(x => x.VehicleType, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => Model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="input-group date col-sm-3">
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control datetimepicker1", @autofocus = "autofocus" } })
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
            @Html.ValidationMessageFor(x => x.Date, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</div>

    <script>
        $(document).ready(function () {
            $("#datetimepicker1").datetimepicker(
                {
                    defaultDate: new Date(),
                    format: 'DD-MM-YYYY HH:mm:ss',
                }
            );
        });
    </script>
}